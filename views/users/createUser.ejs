<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/products.css">
    <title>Usuarios</title>
</head>


<body>
    <%- include('../partials/header') %>
    <div class="create-prod-button">
        <a href="/users" class="boton-detalles">Volver al listado de usuarios</a>
    </div>
    <main class="crear-producto">

        <form action="/users/create" method="POST" autocomplete="on" enctype="multipart/form-data" class="ancho-total" id="form">
            
            <br>
            <h2>Crear usuario</h2>
            <br>
            
            <div class="form-query">
                <label for="fname">Nombre</label>
                <input type="text" name="fname" id="fname" placeholder="Nombre" class="form-space" value="<%= locals.originalData ? originalData.fname : null %>">
                <p class="con-errores-js" id="js-errores-fname" style="display: none;"></p>
                <% if (locals.errores && errores.fname) { %>
                    <div class="text-alert">
                        <%= errores.fname.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="lname">Apellido</label>
                <input type="text" name="lname" id="lname" placeholder="Apellido" class="form-space" value="<%= locals.originalData ? originalData.lname : null %>">
                <p class="con-errores-js" id="js-errores-lname" style="display: none;"></p>
                <% if (locals.errores && errores.lname) { %>
                    <div class="text-alert">
                        <%= errores.lname.msg %> 
                    </div>
                <% } %>
            </div>

            </div>

            <div class="form-query">
                <label for="user">Nombre de usuario</label>
                <input type="text" name="user" id="user" placeholder="Nombre de usuario" class="form-space" value="<%= locals.originalData ? originalData.user : null %>">
                <p class="con-errores-js" id="js-errores-user" style="display: none;"></p>
                <% if (locals.errores && errores.user) { %>
                    <div class="text-alert">
                        <%= errores.user.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="email">email</label>
                <input type="email" name="email" id="email" class="form-space" placeholder="email@email.com" value="<%= locals.originalData ? originalData.email : null %>">
                <p class="con-errores-js" id="js-errores-email" style="display: none;"></p>
                <% if (locals.errores && errores.email) { %>
                    <div class="text-alert">
                        <%= errores.email.msg %> 
                    </div>
                <% } %>
            </div>
            
            <div class="form-query">
                <label for="permisos">Permisos</label>
                <select id="permisos" name="permisos" class="form-space">
                <% if (locals.originalData && originalData.permisos) { %>

                    <% for (let i = 0; i < permisos.length; i++) { %>
                        <% if (permisos[i].id == originalData.permisos) { %>
                            <option value="<%=permisos[i].id%>" selected><%=permisos[i].category%></option> 
                        <% } else { %>
                            <option value="<%=permisos[i].id%>"><%=permisos[i].category%></option> 
                        <% } %>
                    <% } %>

                <% } else { %>
                    
                        <% for (let i = 0; i < permisos.length; i++) { %>
                            <% if (permisos[i].id == '4') { %>
                                <option value="<%=permisos[i].id%>" selected><%=permisos[i].category%></option> 
                            <% } else { %>
                                <option value="<%=permisos[i].id%>"><%=permisos[i].category%></option> 
                            <% } %>
                        <% } %>

                <% } %>
                </select>
            </div>


            <div class="form-query">
                <label for="admin">Administrador</label>
                <select name="admin" id="admin" class="option-query">
                    <option value="True">Sí, administrador</option>
                    <option value="False" selected>No</option>
                </select>
            </div>


            <div class="form-query">
                <label for="birth_date">Fecha de nacimiento</label>
                <input type="date" name="birth_date" id="birth_date" class="form-space" value="<%= locals.originalData ? originalData.birth_date : null %>">
                <p class="con-errores-js" id="js-errores-birth_date" style="display: none;"></p>
                <% if (locals.errores && errores.price) { %>
                    <div class="text-alert">
                        <%= errores.birth_date.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" class="form-space" placeholder="contraseña" autocomplete="username email">
                <p class="con-errores-js" id="js-errores-password" style="display: none;"></p>
                <% if (locals.errores && errores.password) { %>
                    <div class="text-alert">
                        <%= errores.password.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="confirm_pass">Confirmar contraseña</label>
                <input type="password" name="confirm_pass" id="confirm_pass" class="form-space" placeholder="confirmar contraseña" autocomplete="username email">
                <p class="con-errores-js" id="js-errores-confirm_pass" style="display: none;"></p>
                <% if (locals.errores && errores.confirm_pass) { %>
                    <div class="text-alert">
                        <%= errores.confirm_pass.msg %> 
                    </div>
                <% } %>
            </div>

            <br>

            <div class="form-query">
                <label>Avatar</label>
                <br>
                <input type="file" name="avatar_img" id="file">
                <p class="con-errores-js" id="js-errores-file" style="display: none;"></p>
                <% if (locals.errores && errores.avatar_img) { %>
                    <div class="text-alert">
                        <%= errores.avatar_img.msg %>
                    </div>
                <% } else if (locals.errores){ %>
                    <div class="text-alert">
                        Vuelve a cargar el archivo, por favor
                    </div>
                <% } %>
            </div>

            <br>
            <label>
                <input class="recordarme" type="checkbox" class="form-check-input" name="remember_user">Recordar mi usuario
            </label>

            <div class="form-query">
                <button class="form-space padd05 margen05 enviar" type="submit" id="submit" value="submit">Crear usuario</button>
                <p class="con-errores-js" id="js-errores-submit" style="display: none;"></p>
            </div>
        
        </form>






    </main>
        
    <%- include('../partials/footer') %>
    <script src="/js/users.js"></script>
</body>
</html>