<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/products.css">
    
</head>
<body>

    <%- include('./partials/header') %>


    <main>
        <section>
        
            <!-- En este section armariamos el carrousel de fotos de prodcutos-->
            <img src="/images/main_04.jpg" alt="Ferretaría Inbaco" class="carrousel1">

        </section>

        <section class="separador1">
            <br>
        </section>

        <section class="destacados">
            <!-- En este section van los 3 productos destacados-->
            
            <% for (let i = 0; i < products.length; i++) { %>
            <article class="art-lista">
                <img src="/images/uploads/products/<%= products[i].image %>" alt="<%= products[i].name %>" class="destacados-img">
                <div class="caja-descripcion">
                    <h4 class="description"><%= products[i].name %></h4>
                    <hr>
                    <div class="description-box">
                        <p class="description-dato">Marca: <%= products[i].brand %></p>
                        <p class="description-dato">Modelo: <%= products[i].model %></p>
                        <!-- <p class="description-dato"><%= products[i].description %></p> -->
                        <!-- <p class="description-dato">Características: <%= products[i].features %></p> -->
                        <h3 class="description-dato">Precio: $ <%= products[i].price %>,00</h3>
                        <!-- <p class="description-dato">Disponible: <%= products[i].amount %></p> -->
                        <!-- <p class="description-dato">id: <%= products[i].id %></p> -->
                    </div>
                    <div class="caja-boton">
                        
                        <!-- <form action="/products/delete/<%= products[i].id %>" method="POST"> -->
                        <form action="#" method="">
                            <button type="submit" class="boton-borrar" name="borrar" value="<%= products[i].id %>"><h3>Comprar</h3></button>
                        </form>

                        
                        <a href="/productDetail/<%= products[i].id %>" class="boton-detalles">Detalles</a>
                    </div>
                </div>

            </article>
            <% } %>
            
        </section>
        
        <section class="separador2">
            <br>
        </section>

        <section class="en-contacto">
            <div class="medio-contacto">
                F&Q
            </div>

            <div class="medio-contacto">
                gerencia@fereteriamaris.com
            </div>

            <div class="medio-contacto">
                whatsapp
            </div>

            <div class="medio-contacto">
                000 - 0000 - 0000
            </div>

        </section>

        <section class="separador2">
            <br>
        </section>

    </main>
        
    <%- include('./partials/footer') %>

</body>

</html>