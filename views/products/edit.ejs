<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/products.css">
    <title>Productos</title>
</head>


<body>
    <%- include('../partials/header') %>

    <div class="create-prod-button">
        <a href="/products" class="boton-detalles">Volver al listado de productos</a>
        <a href="/products/create" class="boton-detalles">Crear un producto nuevo</a>
    </div>

    <br>
                    
    <h1 class="prod-title">Editar producto</h1>


    <form action="/products/update" method="POST" id="form1" autocomplete="on" enctype="multipart/form-data" class="ancho-total contenedor-editar-producto">

        <div class="prod-columna1">

            <br>

            <div class="productImg">
                <img src="../../images/uploads/products/<%= producto.image %>" alt="<%= producto.name %>">
            </div>

            <br>

            <div class="form-query">
                <label>
                    Cambiar imagen del producto
                </label>
                <br>
                <input type="file" name="product_img" id="file">
                <% if (locals.errors && errors.product_img) { %>
                    <div class="text-danger">
                        <%= errors.product_img.msg %>
                    </div>
                <% } %>
            </div>
        </div>    

        <div class="prod-columna2">

            <div class="form-query">                        
                <label for="name">Nombre del producto</label>
                <input type="text" name="name" id="name" class="form-space" value="<%= locals.originalData ? originalData.name : producto.name %>">
                <% if (locals.errores && errores.name) { %>
                    <div class="text-alert">
                        <%= errores.name.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="name">Marca</label>
                <input type="text" name="brand" id="brand" class="form-space" value="<%= locals.originalData ? originalData.brand : producto.brand %>">
                <% if (locals.errores && errores.brand) { %>
                    <div class="text-alert">
                        <%= errores.brand.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="name">Modelo</label>
                <input type="text" name="model" id="model" class="form-space" <%= locals.errores && errores.model ? 'is-invalid' : null %> 
                value="<%= locals.originalData ? originalData.model : producto.model %>"
                >
                <% if (locals.errores && errores.model) { %>
                    <div class="text-alert">
                        <%= errores.model.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="description">Descripción</label>
                <input type="text" name="description" id="description" class="form-space" <%= locals.errores && errores.description ? 'is-invalid' : null %> 
                value="<%= locals.originalData ? originalData.description : producto.description %>"
                >
                <% if (locals.errores && errores.description) { %>
                    <div class="text-alert">
                        <%= errores.description.msg %> 
                    </div>
                <% } %>
            </div>
            
            <div class="form-query">
                <label>
                    Categoría
                </label>               
                <select id="category" name="category" class="form-space">
                    <% for (let i = 0; i < categories.length; i++) { %>
                        <% if (categories[i].id == producto.category) { %>
                            <option value="<%=categories[i].id%>" selected><%=categories[i].category%></option> 
                        <% } else { %>
                            <option value="<%=categories[i].id%>"><%=categories[i].category%></option> 
                        <% } %>
                    <% } %>
                </select>
            </div>


            <div class="form-query">
                <label for="features">Características específicas del producto</label>
                <input type="text" name="features" id="features" class="form-space" <%= locals.errores && errores.features ? 'is-invalid' : null %> 
                value="<%= locals.originalData ? originalData.features : producto.features %>"
                >
                <% if (locals.errores && errores.features) { %>
                    <div class="text-alert">
                        <%= errores.features.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="price">Precio</label>
                <input type="number" min="0" max="9999999" step="1" name="price" id="price" class="form-space" <%= locals.errores && errores.price ? 'is-invalid' : null %> 
                value="<%= locals.originalData ? originalData.price : producto.price %>"
                >
                <% if (locals.errores && errores.price) { %>
                    <div class="text-alert">
                        <%= errores.price.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="form-query">
                <label for="precio">Cantidad agregada</label>
                <input type="number" min="0" max="9999999" step="1" name="amount" id="amount" class="form-space" value="<%= producto.amount %>" <%= locals.errores && errores.amount ? 'is-invalid' : null %> 
                value="<%= locals.originalData ? originalData.amount : null %>"
                >
                <% if (locals.errores && errores.amount) { %>
                    <div class="text-alert">
                        <%= errores.amount.msg %> 
                    </div>
                <% } %>
            </div>

            <br>

            <div class="form-query">
                <button class="form-space padd05 margen05 enviar" type="submit" value="Submit">Enviar cambios</button>

            </div>
        </div>
    </form>

    <form action="/products/delete/" method="POST" id="form2">
        <div class="prod-title">
            <input type="hidden" name="borrar" value="<%= producto.id %>">
            <button type="submit" class="form-space padd05 margen05 borrar"><h3>Borrar</h3></button>

        </div>           
    </form>

    <%- include('../partials/footer') %>

</body>
</html>